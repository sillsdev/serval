{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console, Xenial)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/SIL.Machine.WebApi.Server/bin/Debug/netcoreapp2.0/ubuntu.16.04-x64/SIL.Machine.WebApi.Server.dll",
            "args": [],
            "cwd": "${workspaceRoot}/src/SIL.Machine.WebApi.Server",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": ".NET Core Launch (web, Xenial)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/SIL.Machine.WebApi.Server/bin/Debug/netcoreapp2.0/ubuntu.16.04-x64/SIL.Machine.WebApi.Server.dll",
            "args": [],
            "cwd": "${workspaceRoot}/src/SIL.Machine.WebApi.Server",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": false,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/Views"
            },
            "console": "integratedTerminal"
        },
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/SIL.Machine.WebApi.Server/bin/Debug/netcoreapp2.0/SIL.Machine.WebApi.Server.dll",
            "args": [],
            "cwd": "${workspaceRoot}/src/SIL.Machine.WebApi.Server",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": false,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/Views"
            },
            "console": "integratedTerminal"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}