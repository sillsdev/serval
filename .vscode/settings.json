{
  "editor.formatOnSave": true,
  "[csharp]": {
    "editor.defaultFormatter": "csharpier.csharpier-vscode",
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "cSpell.words": [
    "ASPNETCORE",
    "bleu",
    "Bson",
    "Bugsnag",
    "clearml",
    "Denormalizer",
    "DYNACONF",
    "hmac",
    "HMACSHA",
    "huggingface",
    "Hyperparams",
    "inferencing",
    "Initializable",
    "invswm",
    "keyterms",
    "languagetechnology",
    "Linq",
    "Macrolanguage",
    "MATSRC",
    "MATTRG",
    "Morpher",
    "Newtonsoft",
    "Nito",
    "NLLB",
    "Paratext",
    "Postprocesses",
    "pretranslate",
    "pretranslated",
    "pretranslating",
    "Pretranslation",
    "pretranslations",
    "Protobuf",
    "ptcc",
    "Rebinder",
    "rpcex",
    "sillsdev",
    "silnlp",
    "Sldr",
    "stylesheet",
    "Subtag",
    "Subtags",
    "thot",
    "timespan",
    "truecase",
    "Truecaser",
    "Unigram",
    "upserted",
    "USFM",
    "Validatable",
    "wacc"
  ],
  "[helm]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
  },
  "yaml.format.bracketSpacing": false,
  "yaml.format.enable": true,
  "files.associations": {
    "*.yaml": "helm"
  },
  "gitlens.autolinks": [
    {
      "prefix": "#",
      "url": "https://github.com/sillsdev/serval/issues/<num>"
    }
  ],
  "dotnet.defaultSolution": "Serval.sln",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  }
}